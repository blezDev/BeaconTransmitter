<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SetupActivity">





        <com.google.android.material.button.MaterialButton
            android:id="@+id/Start_iBeacon_BTN"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@color/glass"
            android:textSize="22sp"
            android:text="Start"
            app:cornerRadius="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ripple_animation"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:scaleType="fitXY"
            android:alpha="0.6"
            android:clickable="false"
            android:contentDescription="@string/beacon_type_ibeacon"

            android:text="Stop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"

            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ripple_daddy_v2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Stop_iBeacon_BTN"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:alpha="0.6"
            android:background="@color/glass"
            android:clickable="true"
            android:contentDescription="@string/beacon_type_ibeacon"
            android:textSize="22sp"
            android:text="Stop"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"


            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>